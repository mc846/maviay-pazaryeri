<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LLAnaYatay1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#99C0F6"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/RL2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/LLYatay2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ivSag"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ivSol1"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/ic_nokta_kahve_1px" />

            <ImageView
                android:id="@+id/ivSol2"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_nokta_kahve_acik_1px" />

            <ImageView
                android:id="@+id/ivSol3"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/ic_nokta_pembe_1px" />

            <LinearLayout
                android:id="@+id/LLDikey"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="25.71"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/LLSatir1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tvSatir1a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/en_az"
                        android:textColor="#441122"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvSatir1b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="4dp"
                        android:gravity="right"
                        android:text="@string/en_az"
                        android:textColor="#115500"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LLSatir2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tvSatir2a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/en_az"
                        android:textColor="#112255"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvSatir2b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="4dp"
                        android:gravity="right"
                        android:text="@string/en_az"
                        android:textColor="#115500"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LLSatir3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >
                    <TextView
                        android:id="@+id/tvSatir3a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/en_az"
                        android:textColor="#111100" />
                    <TextView
                        android:id="@+id/tvSatir3b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:text="@string/en_az"
                        android:textColor="#111100" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LLSatir4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tvSatir4a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/en_az"
                        android:textColor="#111100" />

                    <TextView
                        android:id="@+id/tvSatir4b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="4dp"
                        android:gravity="right"
                        android:text="@string/en_az"
                        android:textColor="#111100" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LLSatir5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tvSatir5a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/en_az"
                        android:textColor="#111100"
                        android:textSize="11sp"
                        tools:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/ivSag"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/dolu_yesil_24" />

    </RelativeLayout>
    <ImageView
        android:id="@+id/ivSol4"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/ic_yatay_ince_yesil" />
</LinearLayout>
